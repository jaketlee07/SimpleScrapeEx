<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarAppTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorToolbarTitle</item>
    </style>

    <style name="MenuBarAppTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorToolbarTitle</item>
    </style>

</resources>
